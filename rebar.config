%% Dependencies =================================================================
{deps,
  [{cowboy, ".*", {git, "git://github.com/ninenines/cowboy.git", "master"}},
   {uuid, ".*", {git, "git://github.com/avtobiff/erlang-uuid.git", "v0.4.6"}},
   {jiffy, ".*", {git, "git://github.com/davisp/jiffy.git", "0.13.2"}},
  % for testing only
   {gun, ".*", {git, "git://github.com/ninenines/gun.git", "master"}}]}.

%% Compiler Options ============================================================
{erl_opts,
  [{platform_define, "^[0-9]+", namespaced_types}, debug_info, fail_on_warning,
    inline]}.

%% EUnit =======================================================================
{eunit_opts, [verbose,
              {report, {eunit_surefire, [{dir, "."}]}}]}.
{cover_enabled, true}.
{cover_print_enabled, true}.
